{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "frontend/(.*)", "use": "@vercel/static" }
  ],
  "functions": {
    "server.js": {
      "includeFiles": "frontend/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/js/(.*)", "dest": "/frontend/js/$1" },
    { "src": "/assets/(.*)", "dest": "/frontend/assets/$1" },
    { "src": "/app.html", "dest": "/frontend/app.html" },
    { "src": "/index.html", "dest": "/frontend/index.html" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}
